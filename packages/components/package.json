{
  "name": "@repo-warehouse/webpack",
  "version": "0.0.3",
  "private": false,
  "main": "dist/bundle.min.js",
  "scripts": {
    "build": "webpack --env.p --env.b",
    "// - OPERATIONS - //": "scripts for filesystem operations",
    "make:dist": "if not exist dist mkdir dist",
    "remove:dist": "if exist dist rd /s /q dist",
    "rename:build": "ren build dist",
    "// - LIB - //": "scripts for lib management",
    "lib:transpile": "npx babel src --presets=minify --out-dir dist --copy-files --no-copy-ignored --ignore \"src/**/*.test.js\"",
    "lib:transpile:watch": "npm run lib:transpile -- --watch",
    "lib:publish": "npm version patch & npm publish"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "autoprefixer": "~9.7.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.24.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-export-default": "^7.0.0-alpha.20",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "~3.4.2",
    "cssnano": "~4.1.10",
    "postcss-cssnext": "~3.1.0",
    "postcss-import": "~12.0.1",
    "postcss-loader": "~3.0.0",
    "postcss-preset-env": "~6.7.0",
    "sugarss": "~2.0.0",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "~4.41.5",
    "webpack-cli": "~3.3.10",
    "webpack-dev-server": "^2.9.6"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
