{
  "name": "@tarsis/rewired-cra",
  "version": "0.0.1",
  "private": false,
  "main": "dist/index.js",
  "author": {
    "email": "tarsis.maksym@gmail.com",
    "name": "Maksym Tarsis",
    "url": "https://github.com/maktarsis"
  },
  "license": "MIT",
  "scripts": {
    "// - CRA SCRIPTS - //": "cli scripts of create-react-app",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "// - OPERATIONS - //": "scripts for filesystem operations",
    "make:dist": "if not exist dist mkdir dist",
    "remove:dist": "if exist dist rd /s /q dist",
    "rename:build": "ren build dist",
    "// - LIB - //": "scripts for lib management",
    "lib:start": "react-app-rewired start",
    "lib:transpile": "babel src --presets=minify --out-dir dist --copy-files --no-copy-ignored --ignore \"src/**/*.test.js\"",
    "lib:transpile:watch": "npm run lib:transpile -- --watch",
    "lib:build": "npm run remove:dist && react-app-rewired build && npm run rename:build && npm run lib:transpile",
    "lib:publish": "npm version patch & npm publish"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/preset-react": "7.8.3",
    "babel-plugin-react-css-modules": "5.2.6",
    "babel-preset-minify": "0.5.1",
    "react": "16.12.0",
    "react-app-rewired": "2.1.5",
    "react-dom": "16.12.0",
    "react-scripts": "3.3.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "react-css-modules",
        {
          "generateScopedName": "[path]_[name]_[local]"
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
