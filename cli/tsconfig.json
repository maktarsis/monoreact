{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "downlevelIteration": true,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ]
  },
  "include": [
    "src",
    "package.json"
  ]
}
