{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "target": "es5",
    "downlevelIteration": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext"
    ]
  },
  "include": [
    "src",
    "package.json"
  ]
}
