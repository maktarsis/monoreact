{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "bin",
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
    "package.json"
  ]
}
