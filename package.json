    "url": "https://github.com/retarsis"
  },
  "workspaces": [
    "cli",
    "example-app/packages/*"
  ],
  "scripts": {
    "cpd": "jscpd **/src",
    "postinstall": "yarn build && yarn example:install",
    "example:install": "cd example-app && yarn install",
    "build": "cd cli && yarn build",
    "start": "cd cli && yarn start",
    "lint": "cd cli && yarn lint",
    "test": "cd cli && yarn test",
    "ci": "yarn install && yarn add ./cli --D -W && yarn test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-sonarjs": "0.6.0",
    "husky": "4.3.8",
    "jscpd": "3.3.25",
    "jscpd-badge-reporter": "1.1.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "webpack": "4.44.2",
    "yarn": "1.22.10",
    "monoreact": "*"
  },
  "keywords": [
    "cli",
    "microfrontend",
    "workspaces",
    "submodules",
    "monorepo",
    "react",
    "typescript",
    "rollup"
  ]
}
